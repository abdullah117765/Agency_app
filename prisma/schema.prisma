generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}
model Quote {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  firstName    String
  lastName     String
  email        String
  phone        String
  services     ServiceType
  NoOfServices Int
  comments     String
}
model Contact {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  fullName    String
  email        String
  phone        String
  message     String
}

enum ServiceType {
  Service_Type_1
  Service_Type_2
  Service_Type_3
}